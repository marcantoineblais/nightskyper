<% @noaddfav %>

<div class="row">
  <%= link_to "Back to Search page", search_path %>
</div>

<div class="row">
  <div class="result-container my-5" data-controller="result">
    <% @meteo_prediction.first(7).each_with_index do |day, index| %>
      <div class="day-<%= index %>">
        <div class="overview-result pt-3" style="display:none;" data-result-target="overview<%= index %> overviews">
          <%= render 'overview', day: day, marker: @marker, place_name: @place_name, bortle: @bortle %>
        </div>
        <div class="prediction-result" data-result-target="prediction<%= index %> predictions" data-action="click->result#toggleOverviewPrediction">
          <%= render 'prediction-card', day: day %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="reviews">
      <% if @marker  %>
        <div class="d-flex justify-content-end">
          <%= link_to 'Add a review', new_marker_review_path(@marker), class: "NS-button" %>
        </div>
        <% @marker.reviews.each do |review|%>
          <%= render 'review-card', review: review %>
        <% end %>
      <% else %>
        <p> No marker</p>
      <% end %>
  </div>
</div>
