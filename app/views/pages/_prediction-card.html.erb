<h2>prediction card</h2>

<div class="cards d-flex flex-column ">
  <% meteo_prediction.each do |jour| %>
    <div class="card mb-4 box-shadow">
      <div class="card-body text-center">
        <div class="row">
          <div class="col-3 text-start">
            <% if Date.parse(jour[:datetime]) === Date.today %>
            <p>Today</p>
            <div><p><%= jour[:datetime] %></p></div>
            <% elsif Date.parse(jour[:datetime]) === Date.tomorrow %>
            <div><p><% jour[:datetime] %></p></div>
            <% else %>
            <div><p><%= jour[:datetime] %></p></div>
            <% end %>
          </div>

          <div class="col-3 d-flex flex-column align-items-center">
            <% condition = jour[:conditions].split(",")[0]%>
            <%= image_tag("#{@weather.get_url(condition)}", width: "30%") %>
            <%= jour[:conditions]%>
          </div>

          <div class="col-3 d-flex flex-column align-items-center">
            <% condition = jour[:moonphase]%>
            <%= image_tag("#{@weather.get_url(condition)}", width: "27%") %>
            <%= jour[:moonphase]%>
          </div>

          <div class="col-3 d-flex flex-column align-items-center">
            <%= image_tag("bortle/light-bulb", width: "27%") %>
            <p>bortle: <%= @bortle %></p>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>
