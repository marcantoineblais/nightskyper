<h2>prediction card</h2>

<div class="cards d-flex flex-column ">
  <% meteo_prediction.each do |jour| %>
    <div class="card mb-4 box-shadow">
      <div class="card-body text-center">
        <div class="row">
          <div class="col-3 text-start d-flex align-items-center">
            <% if Date.parse(jour[:datetime]) === Date.today %>
              <p>Today</p>
              <div>
              <p><%= jour[:datetime] %></p>
              </div>
            <% elsif Date.parse(jour[:datetime]) === Date.tomorrow %>
              <p>Tomorrow</p>
              <div>
              <p><% jour[:datetime] %></p>
              </div>
            <% else %>
              <div>
              <p><%= jour[:datetime] %></p>
              </div>
            <% end %>
          </div>

          <div class="col-3 d-flex flex-column align-items-center">
            <% condition = jour[:conditions].split(",")[0]%>
            <div class="h-75">
            <%= image_tag("#{@weather.get_url(condition)}", width: "30%") %>
            </div>
            <%= jour[:conditions]%>
          </div>

          <div class="col-3 d-flex flex-column align-items-center">
            <% phase = jour[:moonphase]%>
            <div class="h-75">
            <%= image_tag("#{@weather.get_url(phase)}", width: "45%") %>
            </div>
            <%= "#{@weather.get_moonphase(phase)}" %>
          </div>

          <div class="col-3 d-flex flex-column align-items-center">
            <div class="h-75">
            <%= image_tag("bortle/light-bulb", width: "24%") %>
            </div>
            bortle <%= @bortle %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
