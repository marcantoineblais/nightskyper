<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <div class="row align-items-center justify-content-center p-5">
          <div class="col-6 mx-auto border rounded-5 p-3">
            <%= simple_form_for(marker) do |f| %>
              <%= f.input :title %>
              <%= f.input :description, as: :text %>
              <%= f.input :photo, as: :hidden, value: @marker.photo, input_html: { data: { controller: "cloudinary-markers"}} %>
              <%= f.hidden_field :longitude, value: coordinates[0] %>
              <%= f.hidden_field :latitude, value: coordinates[1] %>
              <div class="d-flex justify-content-center">
              <%= f.button :submit, class: "btn btn-warning " %>
              </div>
            <% end %>
          </div>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
